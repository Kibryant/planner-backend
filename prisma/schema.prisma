generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id             String        @id @default(cuid())
    name           String
    email          String        @unique
    password       String
    postPlan       PostPlan[]
    revenueGoal    RevenueGoal[]
    purchaseDate   DateTime
    expirationDate DateTime
}

model PostPlan {
    id          Int     @id @default(autoincrement())
    day         WeekDay
    title       String
    description String
    userId      String
    user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RevenueGoal {
    id          Int      @id @default(autoincrement())
    month       Month
    monthlyGoal String?
    dailyGoal   String?
    actions     Action[]
    userId      String
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Action {
    id            Int         @id @default(autoincrement())
    description   String
    revenueGoalId Int
    revenueGoal   RevenueGoal @relation(fields: [revenueGoalId], references: [id], onDelete: Cascade)
}

enum WeekDay {
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
    SATURDAY
    SUNDAY
}

enum Month {
    JANUARY
    FEBRUARY
    MARCH
    APRIL
    MAY
    JUNE
    JULY
    AUGUST
    SEPTEMBER
    OCTOBER
    NOVEMBER
    DECEMBER
}
